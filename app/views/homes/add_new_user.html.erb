<div class="container marTop100">
  <!-- Marketing Icons Section -->
  <div class="row">
    <div class="col-lg-12">
        <h3 >Create New User</h3>
    </div>
    <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="col-lg-5 centerForm">
            
              <%= form_for(@user,url: create_new_user_homes_path(),html: { :multipart => true, :class => 'form-horizontal' }) do |f| %>

                <% if @user.errors.any? %>
                  <div id="error_explanation">
                    <ul>
                      <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>

                <div class="form-group">
                  <label class="col-lg-12 control-label" for="">Name<span class="required">*</span>:</label>
                  <div class="col-lg-12">
                    <%= f.text_field :name, autofocus: true, placeholder: "Name",:required => true,class: "form-control" %>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-lg-12 control-label" for="">Email<span class="required">*</span>:</label>
                  <div class="col-lg-12">
                    <%= f.email_field :email, autofocus: true, placeholder: "Email",:required => true,class: "form-control" %>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-lg-12 control-label" for="">Password<span class="required">*</span>:</label>
                  <div class="col-lg-12">         
                    <%= f.password_field :password, autocomplete: "off", placeholder: "Password",:required => true, class: "form-control" %> 
                  </div>
                </div> 

                <div class="actions">
                  <%= f.submit "Save" , class: "btn loginBtn" %>
                </div>
              <% end %>

            </div>
          </div>
        </div>
    </div>
  </div>
</div>

