<div class="listing-products marTop100">
  <div class="row">
    
    <div class="col-lg-12" style="padding-left:0px;">
      <div class="container">
        <% if !@food_expenditures.blank? %>
          <div class="col-lg-12">
              <h3 class="page-header">
                  Food Expenses 
              </h3>
          </div>
          <div class="col-lg-12">
            <table class="table table-striped table-bordered listing-products-table">
              <thead>
                <tr>
                  <th style="color:#5ca545">Hotel Name</th>
                  <th style="color:#5ca545">Expenditure Type</th>
                  <th style="color:#5ca545">Food Type</th>
                  <th style="color:#5ca545">No of Persons</th>
                  <th style="color:#5ca545">Payment</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @food_expenditures.each do |ad| %>
                  <tr>
                    <td><%= ad.hotel_name %></td>
                    <td><%= ad.expenditure_type %></td>
                    <td><%= ad.food_type %></td>
                    <td><%= ad.no_of_persons %></td>
                    <td><%= ad.payment %></td>              
                    <td style="text-align:right;">                
                      <%= link_to 'Show', ad,:class=>"list-product-show" %>
                      <%= link_to 'Approve Request', approve_edit_request_food_expenditure_path(ad),:class=>"list-product-edit" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
        <% end %>

        <% if !@hotel_expenditures.blank? %>
          <div class="col-lg-12">
              <h3 class="page-header">
                  Hotel Expenses 
              </h3>
          </div>
          <div class="col-lg-12">
            <table class="table table-striped table-bordered listing-products-table">
              <thead>
                <tr>
                  <th style="color:#5ca545">Hotel Name</th>
                  <th style="color:#5ca545">Total Days</th>
                  <th style="color:#5ca545">No of Rooms</th>
                  <th style="color:#5ca545">Room Type</th>
                  <th style="color:#5ca545">Charges Per Day</th>
                  <th style="color:#5ca545">Total Amount</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @hotel_expenditures.each do |ad| %>
                  <tr>
                    <td><%= ad.hotel_name %></td>
                    <td><%= ad.total_days %></td>
                    <td><%= ad.no_of_rooms %></td>
                    <td><%= ad.room_type %></td>
                    <td><%= ad.charges_per_day %></td>
                    <td><%= ad.total_days %></td>              
                    <td style="text-align:right;">                
                      <%= link_to 'Show', ad,:class=>"list-product-show" %>
                      <%= link_to 'Approve Request', approve_edit_request_hotel_expenditure_path(ad),:class=>"list-product-edit" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
        <% end %>

        <% if !@transport_expenditures.blank? %>
          <div class="col-lg-12">
              <h3 class="page-header">
                  Transport Expenses 
              </h3>
          </div>
          <div class="col-lg-12">
            <table class="table table-striped table-bordered listing-products-table">
              <thead>
                <tr>
                  <th style="color:#5ca545">Transport</th>
                  <th style="color:#5ca545">No of seats</th>
                  <th style="color:#5ca545">Departure place</th>
                  <th style="color:#5ca545">Arrival place</th>
                  
                  <th style="color:#5ca545">Payment</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @transport_expenditures.each do |ad| %>
                  <tr>
                    <td><%= ad.transport_type %></td>
                    <td><%= ad.no_of_seats %></td>
                    <td><%= ad.arrival_place %></td>
                    <td><%= ad.departure_place %></td>
                    <td><%= ad.payment %></td>               
                    <td style="text-align:right;">                
                      <%= link_to 'Show', ad,:class=>"list-product-show" %>
                      <%= link_to 'Approve Request', approve_edit_request_transport_expenditure_path(ad),:class=>"list-product-edit" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
        <% end %>

        <% if !@extra_expenditures.blank? %>
          <div class="col-lg-12">
              <h3 class="page-header">
                  Extra Expenses
              </h3>
          </div>
          <div class="col-lg-12">
            <table class="table table-striped table-bordered listing-products-table">
              <thead>
                <tr>
                  <th style="color:#5ca545">Expenditure Type</th>
                  <th style="color:#5ca545">Payment</th>
                  <th style="color:#5ca545">Reason</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @extra_expenditures.each do |ad| %>
                  <tr>
                    <td><%= ad.expenditure_type %></td>
                    <td><%= ad.payment %></td>
                    <td><%= ad.reason %></td>              
                    <td style="text-align:right;">                
                      <%= link_to 'Show', ad,:class=>"list-product-show" %>
                      <%= link_to 'Approve Request', approve_edit_request_extra_expenditure_path(ad),:class=>"list-product-edit" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
        <% end %>
      </div>
    </div>
  </div>
</div>
