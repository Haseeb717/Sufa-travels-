<div class="container">
  <div class="row">
    <div class="col-lg-12">
        <h3 >Edit <%= resource_name.to_s.humanize %></h3>
    </div>
    <div class="col-lg-12">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>

          <div class="panel panel-default">
            <div class="panel-body">


              <div class="col-lg-4 centerForm">

                <div class="form-group">
                  <label class="col-lg-12 control-label" for="inputEmail">Upload Image</label>
                  <div class="col-lg-12">
                    <%= f.file_field :image, autofocus: true, placeholder: "Image", class: "form-control image" %>
                    <% if resource.persisted? %>
                        <%= image_tag resource.image.url(), :class=>"edit_image" unless resource.image.path.nil? %> 
                    <% end %>
                    <img class="preview_image" src="#" alt="your image"/>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-lg-12 control-label" for="inputEmail">Name</label>
                  <div class="col-lg-12">
                    <%= f.text_field :name, autofocus: true, placeholder: "Name", class: "form-control" %>
                  </div>
                </div>

                

                <div class="form-group">
                  <label class="col-lg-12 control-label" for="inputEmail">Email Address:</label>
                  <div class="col-lg-12">
                    <!-- <input type="text" placeholder="Email" id="inputEmail" class="form-control"> -->
                    <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
                  </div>
                </div>

               
                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                <% end %>

                <div class="form-group">
                  <label class="col-lg-12 control-label" for="inputEmail">Password <i>(leave blank if you don't want to change it)</i></label>
                  <div class="col-lg-12">
                    <!-- <input type="text" placeholder="Email" id="inputEmail" class="form-control"> -->
                    <%= f.password_field :password, autocomplete: "off",placeholder: "Password", class: "form-control" %>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-lg-12 control-label" for="inputEmail">Password Confirmation</label>
                  <div class="col-lg-12">
                    <!-- <input type="text" placeholder="Email" id="inputEmail" class="form-control"> -->
                    <%= f.password_field :password_confirmation, autocomplete: "off",placeholder: "Password Confirmation"  ,class: "form-control" %>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-lg-12 control-label" for="inputEmail">Current Password <i>(we need your current password to confirm your changes)</i></label>
                  <div class="col-lg-12">
                    <!-- <input type="text" placeholder="Email" id="inputEmail" class="form-control"> -->
                    <%= f.password_field :current_password, autocomplete: "off",placeholder: "Current Confirmation", class: "form-control" %>
                  </div>
                </div>
                
                <div class="form-group">
                  <div class="col-lg-12">
                      <%= f.submit "Update", class: "btn loginBtn" %>
                  </div>   
                </div>  
              </div>
            </div>
          </div>  
      <%end %>
    </div>
  </div>
</div>