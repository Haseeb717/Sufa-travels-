<div class="container marTop100">
  <div class="row">
    <div class="col-lg-12">
        <h3 >Add Balance</h3>
    </div>
    <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="col-lg-5 centerForm">
              <%= form_tag submit_add_balance_homes_path, :method => :post, :class => 'form-horizontal' do  %>

                <div class="form-group">
                  <label class="col-lg-12 control-label" for="">Balance Amount<span class="required">*</span>:</label>
                  <div class="col-lg-12">
                    <%= text_field_tag :amount, "", class: 'form-control' %>
                  </div>
                </div>
                
                <div class="form-group">
                  <label class="col-lg-12 control-label" for="">Balance Amount<span class="required">*</span>:</label>
                  <div class="col-lg-12">
                    <%= select_tag "user_id", options_from_collection_for_select(User.user.all, "id", "name",@select || 0), class: 'form-control' %>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-lg-12 control-label" for="">Comments<span class="required">*</span>:</label>
                  <div class="col-lg-12">
                    <%= text_field_tag :comments, "", class: 'form-control' %>
                  </div>
                </div>

                <div class="actions">
                  <%= submit_tag "Save" , class: "btn loginBtn" %>
                </div>
              <% end %>

            </div>
          </div>
        </div>
    </div>
  </div>
</div>

