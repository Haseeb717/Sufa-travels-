<div class="container marTop100">
    <!-- Marketing Icons Section -->
    <div class="row">
        <div class="col-lg-12">
            <h3 >Login </h3>
        </div>
        <div class="col-lg-12">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
            <div class="panel panel-default">
              <div class="panel-body">
                <div class="col-lg-4 centerForm">
                  
                  <div class="form-group">
                    <label class="col-lg-12 control-label" for="inputEmail">Email Address:</label>
                    <div class="col-lg-12">
                      <!-- <input type="text" placeholder="Email" id="inputEmail" class="form-control"> -->
                      <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
                    </div>
                  </div>
                       
                  <div class="form-group">
                    <label class="col-lg-12 control-label" for="password">Password:</label>
                    <div class="col-lg-12">
                      <!-- <input type="password" placeholder="Password" id="password" class="form-control"> -->
                      <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-lg-12">
                      <div class="checkbox">
                          <%= f.check_box :remember_me, :style => "margin:0" %>
                          <%= f.label :remember_me %>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-lg-12">
                      
                      <div class="">
                        <!-- <button class="btn loginBtn" type="submit">Login</button> -->
                        <%= f.submit "Login", class: "btn loginBtn" %>
                      </div>
                    </div>   
                  </div>  
                </div>
              </div>
            </div>
            <div class="pull-left marTop15">
               <%= render "devise/shared/links" %>
            </div>
          <%end %>
        </div>
    </div>
</div>