<div class="listing-products marTop100">
  <div class="row">
    <div class="col-lg-12" style="padding-left:0px;">
      <div class="container">
        <h1>Daily Status</h1>
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="col-lg-5" style="padding: 25px 0 0 20px">

              <p class="form-group">
                <strong class="control-label">Name:</strong>
                <%= current_user.name %>
              </p>

              <p class="form-group">
                <strong class="control-label">Remaining Balance:</strong>
                <%= current_user.current_amount %>
              </p>
              
              <p class="form-group">
                <strong class="control-label">Food Expenditure:</strong>
                <%= food = current_user.food_expenditures.where("created_at >= ? and created_at <= ?",Time.now.beginning_of_day,Time.now).map(&:payment).sum %>
              </p>
              <% byebug %>
              <p class="form-group">
                <strong class="control-label">Transport Expenditure:</strong>
                <%= transport = current_user.transport_expenditures.where("created_at >= ? and created_at <= ?",Time.now.beginning_of_day,Time.now).map(&:payment).sum  %>
              </p>
              
              <p class="form-group">
                <strong class="control-label">Hotel Expenditure:</strong>
                <%= hotel = current_user.hotel_expenditures.where("created_at >= ? and created_at <= ?",Time.now.beginning_of_day,Time.now).map(&:total_amount).sum %>
              </p>
              <p class="form-group">
                <strong class="control-label">Miscellaneous Expenditure:</strong>
                <%= extra = current_user.extra_expenditures.where("created_at >= ? and created_at <= ?",Time.now.beginning_of_day,Time.now).map(&:payment).sum %>
              </p>

              <p class="form-group">
                <strong class="control-label">Total Expenditures:</strong>
                <%= food+hotel+extra+transport %>
              </p>
            </div>
            <div class="col-lg-7">
              <%= column_chart({"Food" => food,"Hotel"=>hotel,"transport"=>transport,"Extra"=>extra}) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
