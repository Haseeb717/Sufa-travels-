<div class="panel panel-default">
  <div class="panel-body">
    <div class="col-lg-5 centerForm">
    
      <%= form_for(@hotel_expenditure, html: { :multipart => true, :class => 'form-horizontal' }) do |f| %>

        <% if @hotel_expenditure.errors.any? %>
          <div id="error_explanation">
            <ul>
              <% @hotel_expenditure.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <label class="col-lg-12 control-label" for="">Voucher Reference<span class="required">*</span>:</label>
          <div class="col-lg-12">
            <%= f.text_field :voucher_reference, autofocus: true, placeholder: "Hotel Name",:required => true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-12 control-label" for="">Guest Name<span class="required">*</span>:</label>
          <div class="col-lg-12">
            <%= f.text_field :guest_name, autofocus: true, placeholder: "Hotel Name",:required => true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-12 control-label" for="">Room Type<span class="required">*</span>:</label>
          <div class="col-lg-12">
          <%= f.select(:room_type, HotelExpenditure.room_types.keys.to_a,{:prompt => 'Food Type'}, { :required => true,:class => 'form-control' }) %>  
          </div>
        </div> 

        <div class="form-group">
          <label class="col-lg-12 control-label" for="">Room Basis<span class="required">*</span>:</label>
          <div class="col-lg-12">
          <%= f.select(:room_basis, HotelExpenditure.room_types.keys.to_a,{:prompt => 'Food Type'}, { :required => true,:class => 'form-control' }) %>  
          </div>
        </div> 

        <div class="form-group">
          <label class="col-lg-12 control-label" for="">Supplier Name<span class="required">*</span>:</label>
          <div class="col-lg-12">
            <%= f.text_field :supplier_name, autofocus: true, placeholder: "Hotel Name",:required => true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-12 control-label" for="">Hotel Name<span class="required">*</span>:</label>
          <div class="col-lg-12">
            <%= f.text_field :hotel_name, autofocus: true, placeholder: "Hotel Name",:required => true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-12 control-label" for="">Checked In Date<span class="required">*</span>:</label>
          <div class="col-lg-12">
            <%= f.datetime_select :checked_in_date, autofocus: true, placeholder: "Checked In Date",:required => true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-12 control-label" for="">Checked Out Date<span class="required">*</span>:</label>
          <div class="col-lg-12">
            <%= f.datetime_select :checked_out_date, autofocus: true, placeholder: "Checked Out Date",:required => true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-12 control-label" for="">Charges Per Day<span class="required">*</span>:</label>
          <div class="col-lg-12">
            <%= f.number_field :charges_per_day, autofocus: true, placeholder: "Charges Per Day",:required => true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-12 control-label" for="">No of Rooms<span class="required">*</span>:</label>
          <div class="col-lg-12">
            <%= f.number_field :no_of_rooms, autofocus: true, placeholder: "No of Rooms",:required => true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-12 control-label" for="">Comments<span class="required">*</span>:</label>
          <div class="col-lg-12">
            <%= f.text_area :comments, placeholder: "Comments",:required => true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-12 control-label" for="">Image<span class="required">*</span>:</label>
          <div class="col-lg-12">
            <%= f.file_field :image, class: "form-control image" %>
            <% if @hotel_expenditure.persisted? %>
                <%= image_tag @hotel_expenditure.image.url(), :class=>"edit_image" unless @hotel_expenditure.image.path.nil? %> 
            <% end %>
            <img class="preview_image" src="#" alt="your image"/>
          </div>
        </div>
        <%= f.hidden_field :expenditure_type, :value => "Hotel" %>

        <div class="actions">
          <%= f.submit "Save" , class: "btn loginBtn" %>
        </div>
      <% end %>

    </div>
  </div>
</div>