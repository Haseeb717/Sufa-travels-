<div class="listing-products marTop100">
  <div class="row">
    <div class="col-lg-12" style="padding-left:0px;">
      <div class="container">
        <h1>List of all Users</h1>
        <div class="panel panel-default">
          <div class="panel-body">
            <% if !@users.blank? %>
              <div class="col-lg-11">
                <table class="table table-striped table-bordered listing-products-table">
                  <thead>
                    <tr>
                      <th style="color:#5ca545">Name</th>
                      <th style="color:#5ca545">Email</th>
                      <th style="color:#5ca545">Total Balance</th>
                      <th style="color:#5ca545">Current Balance</th>
                      <th style="color:#5ca545">Total Expenditure</th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @users.each do |user| %>
                      <tr>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td><%= user.total_amount %></td>
                        <td><%= user.current_amount %></td>
                        <td><%= user.total_expenditures_amount %></td>
                        <td style="text-align:right;">                
                          <%= link_to 'View', show_user_home_path(user),:class=>"list-product-show" %>
                          <%= link_to 'Add Balance', add_balance_homes_path(:user=>user),:class=>"list-product-edit" %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            <% else %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
