<div class="panel panel-default">
  <div class="panel-body">
    <div class="col-lg-5 centerForm">
    
      <%= form_for(@transport_expenditure, html: { :multipart => true, :class => 'form-horizontal' }) do |f| %>

        <% if @transport_expenditure.errors.any? %>
          <div id="error_explanation">
            <ul>
              <% @transport_expenditure.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <label class="col-lg-12 control-label" for="">Voucher Reference<span class="required">*</span>:</label>
          <div class="col-lg-12">
            <%= f.text_field :voucher_reference, autofocus: true, placeholder: "Voucher Reference",:required => true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-12 control-label" for="">Guest Name<span class="required">*</span>:</label>
          <div class="col-lg-12">
            <%= f.text_field :guest_name, autofocus: true, placeholder: "Guest Name",:required => true, class: "form-control" %>
          </div>
        </div>

       <div class="form-group">
          <label class="col-lg-12 control-label" for="">From<span class="required">*</span>:</label>
          <div class="col-lg-12">
            <%= f.text_field :arrival_place, autofocus: true, placeholder: "Arrival Place",:required => true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-12 control-label" for="">To<span class="required">*</span>:</label>
          <div class="col-lg-12">
            <%= f.text_field :departure_place, autofocus: true, placeholder: "Departure Place",:required => true, class: "form-control" %>
          </div>
        </div> 

        <div class="form-group">
          <label class="col-lg-12 control-label" for="">Supplier Name<span class="required">*</span>:</label>
          <div class="col-lg-12">
            <%= f.text_field :supplier_name, autofocus: true, placeholder: "Hotel Name",:required => true, class: "form-control" %>
          </div>
        </div>

        
        <div class="form-group">
          <label class="col-lg-12 control-label" for="">Transport Type<span class="required">*</span>:</label>
          <div class="col-lg-12">
          <%= f.select(:transport_type, TransportExpenditure.transport_types.keys.to_a,{:prompt => 'Transport Type'}, { :required => true,:class => 'form-control t_type' }) %>  
          </div>
        </div> 

        <div class="form-group seats">
          <label class="col-lg-12 control-label" for="">No of Seats<span class="required">*</span>:</label>
          <div class="col-lg-12">
            <%= f.number_field :no_of_seats, autofocus: true, placeholder: "No of Seats",:required => true, class: "form-control " %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-12 control-label" for="">Payment<span class="required">*</span>:</label>
          <div class="col-lg-12">
            <%= f.number_field :payment, autofocus: true, placeholder: "Payment",:required => true, class: "form-control" %>
          </div>
        </div>

        

        <div class="form-group">
          <label class="col-lg-12 control-label" for="">Comments<span class="required">*</span>:</label>
          <div class="col-lg-12">
            <%= f.text_area :comments, placeholder: "Comments",:required => true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-12 control-label" for="">Image<span class="required">*</span>:</label>
          <div class="col-lg-12">
            <%= f.file_field :image, class: "form-control image" %>
            <% if @transport_expenditure.persisted? %>
                <%= image_tag @transport_expenditure.image.url(), :class=>"edit_image" unless @transport_expenditure.image.path.nil? %> 
            <% end %>
            <img class="preview_image" src="#" alt="your image"/>
          </div>
        </div>
        <%= f.hidden_field :expenditure_type, :value => "Transport" %>

        <div class="actions">
          <%= f.submit "Save" , class: "btn loginBtn" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
<script type="text/javascript">
$(document).ready(function(){
  $('.t_type').bind('change', function (e) { 
    if( $('.t_type').val() == 'Bus') {
      $('.seats').show();
      
    }
    else  {
      
      $('.seats').hide();
    }         
  })
});
</script>