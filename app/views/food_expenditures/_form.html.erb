<div class="panel panel-default">
  <div class="panel-body">
    <div class="col-lg-5 centerForm">
    
      <%= form_for(@food_expenditure, html: { :multipart => true, :class => 'form-horizontal' }) do |f| %>

        <% if @food_expenditure.errors.any? %>
          <div id="error_explanation">
            <ul>
              <% @food_expenditure.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        

        <div class="form-group">
          <label class="col-lg-12 control-label" for="">Agent Name / Voucher Reference<span class="required">*</span>:</label>
          <div class="col-lg-12">
            <%= f.text_field :voucher_reference, autofocus: true, placeholder: "Voucher Reference",:required => true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-12 control-label" for="">Guest Name<span class="required">*</span>:</label>
          <div class="col-lg-12">
            <%= f.text_field :guest_name, autofocus: true, placeholder: "Guest Name",:required => true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-12 control-label" for="">Hotel Name<span class="required">*</span>:</label>
          <div class="col-lg-12">
            <%= f.text_field :hotel_name, autofocus: true, placeholder: "Hotel Name",:required => true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-12 control-label" for="">On Request Of<span class="required">*</span>:</label>
          <div class="col-lg-12">
            <%= f.text_field :on_request_of, autofocus: true, placeholder: "On Request Of",:required => true, class: "form-control" %>
          </div>
        </div>

        
        <div class="form-group">
          <label class="col-lg-12 control-label" for="">Food Type<span class="required">*</span>:</label>
          <div class="col-lg-12">
          <%= f.select(:food_type, FoodExpenditure.food_types.keys.to_a,{:prompt => 'Food Type'}, { :required => true,:class => 'form-control' }) %>  
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-12 control-label" for="">No of Persons<span class="required">*</span>:</label>
          <div class="col-lg-12">
            <%= f.text_field :no_of_persons, autofocus: true, placeholder: "No of Persons",:required => true, class: "form-control" %>
          </div>
        </div> 


        <div class="form-group">
          <label class="col-lg-12 control-label" for="">Payment<span class="required">*</span>:</label>
          <div class="col-lg-12">
            <%= f.text_field :payment, autofocus: true, placeholder: "Payment",:required => true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-12 control-label" for="">Date<span class="required">*</span>:</label>
          <div class="col-lg-12">
            <%= f.text_field :date, placeholder: 'Date',class: 'form-control start_date' %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-12 control-label" for="">Date<span class="required">*</span>:</label>
          <div class="col-lg-12">
            <%= f.datetime_select :created_at, placeholder: "Date",:required => true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-12 control-label" for="">Comments<span class="required">*</span>:</label>
          <div class="col-lg-12">
            <%= f.text_area :comments, placeholder: "Comments",:required => true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-12 control-label" for="">Image<span class="required">*</span>:</label>
          <div class="col-lg-12">
            <%= f.file_field :image, class: "form-control image" %>
            <% if @food_expenditure.persisted? %>
                <%= image_tag @food_expenditure.image.url(), :class=>"edit_image" unless @food_expenditure.image.path.nil? %> 
            <% end %>
            <img class="preview_image" src="#" alt="your image"/>
          </div>
        </div>

        <%= f.hidden_field :expenditure_type, :value => "Food" %>
        <div class="actions">
          <%= f.submit "Save" , class: "btn loginBtn" %>
        </div>
      <% end %>

    </div>
  </div>
</div>