<div class="listing-products marTop100">
  <div class="row">
    <div class="col-lg-12" style="padding-left:0px;">
      <div class="container">
        <h1>List of all Balance Approvals</h1>
        <div class="panel panel-default">
          <div class="panel-body">
            <% if !@userbalances.blank? %>
              <div class="col-lg-12">
                <table class="table table-striped table-bordered listing-products-table">
                  <thead>
                    <tr>
                      <th style="color:#5ca545">Balance</th>
                      
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @userbalances.each do |user| %>
                      <tr>
                        <td><%= user.amount %></td>
                        
                        <td style="text-align:right;">                
                          <%= link_to 'Recieved', user_approve_balance_recieved_home_path(user),:class=>"list-product-edit" %>

                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            <% else %>
              <h1>No Balance Recieved</h1>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
